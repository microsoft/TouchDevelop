<Window x:Class="Microsoft.Microbit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="CanMinimize"
        Title="micro:bit loader" Height="320" Width="340" Background="White"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="68*"/>
            <ColumnDefinition Width="245*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="/Microsoft.MicroBit.Loader;component/bg-section-alt.png"/>
        </Grid.Background>
        <Image Source="/Microsoft.MicroBit.Loader;component/micro-bit Logo stacked_Polar Colour Grad+Black BBC Logo_RGB.png" Width="200" Margin="67,-16,67,108" Grid.ColumnSpan="2" RenderOptions.BitmapScalingMode="HighQuality" />
        <Image Source="/Microsoft.MicroBit.Loader;component/microsoftlogo.png" Margin="67,124,67,14" RenderOptions.BitmapScalingMode="HighQuality" Grid.ColumnSpan="2" />
        <Label Content="{Binding Path=Status}" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="27,231,21,0" VerticalAlignment="Top" Width="286" Grid.ColumnSpan="2" Height="35" FontSize="16"/>
        <CheckBox Content="delete .hex file after loading" Margin="89,271,0,4" IsChecked="{Binding Path=DeleteOnFlash}" Grid.Column="1" />
    </Grid>
</Window>
